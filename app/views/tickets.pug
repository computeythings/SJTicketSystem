include header.pug
script(src='/js/rowlink.js')
body
  table.table.table-bordered
    tr
      th(scope='col') Ticket #
      th(scope='col') User
      th(scope='col') Category
      th(scope='col') Subject
      th(scope='col') Assigned To
      th(scope='col') Date
    each ticket in tickets
      tr(class= ticket.closed ? 'closed' : undefined
      data-href='/tickets/' + ticket.id tabindex=0).tickets-row
        td.ticketNoRow= ticket.id
        td.userRow= ticket.requestedBy
        td.categoryRow= ticket.category
        td.subjectRow
          span.ticket-info
            strong= ticket.subject
        td.assignedRow= ticket.assignedTo
        td.dateRow
          span.ticket-date
            span= ticket.timeString
            br
            span= ticket.dateString

  if admin
    a.btn.btn-primary(href='/tickets/add') Add
