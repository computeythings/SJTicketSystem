include header.pug
main.login-form
  .cotainer
    .row.justify-content-center
      .col-md-8
        .card
          .card-body
            h2.card-title= user
            form(method='POST' action='/account/update' oninput='password_confirm.setCustomValidity(password_confirm.value != password.value ? "Passwords do not match." : "")')
              .form-group.row
                label(for='current') Current Password:
                input#current.form-control(type='password' name='current')
              .form-group.row
                label(for='pw') New Password:
                input#pw.form-control(type='password' name='password')
              .form-group.row
                label(for='pw_confirm') Confirm:
                input#pw_confirm.form-control(type='password' name='password_confirm')
              button.btn.btn-primary(type='submit') Update
