include header.pug
body
  h1= heading

  table.reports
    tr
      th User
      th Category
      th Subject
      th Assigned To
      th Date
    each report in reports
      tr(class= report.closed ? 'closed' : undefined)
        td= report.requestedBy
        td= report.category
        td
          div.ticket-info
            strong= report.subject
            br
            span= report.description
        td= report.assignedTo
        td= reportDate

  a(href='/reports/add') Add
