include header.pug
body
  h1= heading
  table.table.table-striped
    tr
      th(scope='col') Ticket #
      th(scope='col') User
      th(scope='col') Category
      th(scope='col') Subject
      th(scope='col') Assigned To
      th(scope='col') Date
      th
    each report in reports
      tr(class= report.closed ? 'closed' : undefined)
        td= report.rowid
        td= report.requestedBy
        td= report.category
        td
          span.ticket-info
            strong= report.subject
            br
            p= report.description
        td= report.assignedTo
        td
          span.ticket-date
            span= timeFmt
            br
            span= dateFmt
        td
          a(href='/reports/edit/' + report.rowid).fas.fa-edit.edit-user

  a.btn.btn-primary(href='/reports/add') Add
