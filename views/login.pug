html
  head
    title= title
  body
    form(method='POST' action='/login')
      div.form-group
        label(for='name') Name:
        input#name.form-control(type='text' name='username')
      div.form-group
        label(for='pw') Password:
        input#pw.form-control(type='password' name='password')
      button.btn.btn-primary(type='submit') Login
